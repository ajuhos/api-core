{
  "compilerOptions": {
    "target": "es6",
    "outDir": "dist",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "lib": ["es6", "es2015.promise"],
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "types": ["jest"]
}